{
  "manifest_version": 2,

  "name": "Synesthetic",
  "description": "A chrome extension to explore synthetic synesthesia",
  "version": "1.0",
  "options_page": "options.html",

  "permissions": [
    "activeTab", "storage"
  ],

  "background": {
    "scripts": ["cube-3d/squares.js", "background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Modify letter colours",
    "default_icon": "icon.png"
  }
}
